<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cool_gradient"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/moviesSearchButton"
        style="@style/myButton"
        android:layout_width="150sp"
        android:layout_height="50sp"
        android:layout_below="@+id/moviesSearchBox"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient_black"
        android:drawableLeft="@drawable/search_button"
        android:onClick="searchMovies"
        android:text="@string/search_movies" />

    <EditText
        android:id="@+id/moviesSearchBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="143dp"
        android:ems="10"
        android:hint="@string/search_list"
        android:inputType="text"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/moviesSearchBox"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="23dp"
        android:src="@drawable/logo" />

</RelativeLayout>