<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MovieShowActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cool_gradient" >

	<TextView
	    android:id="@+id/title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="17dp"
	    android:layout_marginTop="17dp"
	    android:text="@string/movie_title"
	    android:textColor="@color/text_color"
	    android:textSize="20sp"
	    android:textStyle="bold" />

	<TextView
	    android:id="@+id/year"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/title"
	    android:layout_below="@+id/title"
	    android:text="@string/release_date"
	    android:textColor="@color/text_color" />

	<TextView
	    android:id="@+id/audience_value"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/audience_text"
	    android:layout_alignBottom="@+id/audience_text"
	    android:layout_marginLeft="5dp"
	    android:layout_toRightOf="@+id/audience_text"
	    android:text="@string/empty"
	    android:textColor="@color/text_color"
	     />

	<ImageView
	    android:id="@+id/imageView1"
	    android:contentDescription="@string/movie_poster"
	    android:layout_width="150dp"
	    android:layout_height="190dp"
	    android:layout_alignLeft="@+id/year"
	    android:layout_below="@+id/year"
	    android:layout_marginTop="14dp"
	    android:scaleType="centerInside"
	    android:src="@drawable/com_facebook_picker_item_background"
	    android:layout_marginBottom="14dp" />

	<TextView
	    android:id="@+id/synopsis"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/imageView1"
	    android:layout_below="@+id/imageView1"
	    android:layout_marginTop="18dp"
	    android:text="@string/synopsis"
	    android:textColor="@color/text_color" 
	    />

	<TextView
	    android:id="@+id/critic_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/synopsis"
	    android:layout_below="@+id/synopsis"
	    android:layout_marginTop="14dp"
	    android:text="@string/critic_rating"
	    />

	<TextView
	    android:id="@+id/critic_value"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/critic_text"
	    android:layout_alignBottom="@+id/critic_text"
	    android:layout_marginLeft="5dp"
	    android:layout_toRightOf="@+id/critic_text"
	    android:text="@string/empty"
	    android:textColor="@color/text_color"
	    />

	<TextView
	    android:id="@+id/audience_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/critic_text"
	    android:layout_below="@+id/critic_text"
	    android:text="@string/audience_rating"
	    />

	<TextView
	    android:id="@+id/synop_title"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/synopsis"
	    android:layout_below="@+id/imageView1"
	    android:text="@string/synop_title"
	    />

	</RelativeLayout>
</ScrollView>